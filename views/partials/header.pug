.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-baruser
      a.navbar-brand(href='/') Wood N' Shoes
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(class=(title === 'Home') ? 'active' : undefined)
          a(href='/')
            i.fa.fa-home
            | Home
        li(class=(title === 'Map') ? 'active' : undefined)
          a(href='/Map') 
            i.fa.fa-map-marker
            | Map
        li(class=(title === 'Add') ? 'active' : undefined)
          a(href='/account/add')
            i.fa.fa-plus-square
            | Place an ad
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login')
              i.fa.fa-user
              | Login

          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/signup')
              i.fa.fa-user-plus
              | Create Account
        else
          li(class=(title === 'My Ads') ? 'active' : undefined)
            a(href='/account/myads')
              i.fa.fa-archive
              | My ads
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='', data-toggle='dropdown')
              i.fa.fa-cog
              span= user.profile.name || user.email
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  i.fa.fa-user
                  span= 'My Account'
              li.divider
              li
                a(href='/logout')
                  i.fa.fa-sign-out
                  span= 'Log out'
